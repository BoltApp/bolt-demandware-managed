        <exclusivity>no</exclusivity>
        <name xml:lang="x-default">bolt-product-30percent-off-coupon</name>
        <custom-attributes>
            <custom-attribute attribute-id="geDoNotConvert">false</custom-attribute>
            <custom-attribute attribute-id="geLoyaltyPromotion">false</custom-attribute>
        </custom-attributes>
        <product-promotion-rule>
            <discounted-products>
                <included-products>
                    <condition-group>
                        <price-condition operator="greater than">
