    <campaign campaign-id="bolt-all-promotion-types-auto">
        <description>This campaign contains order level/shipping level/product level promotions which is triggered without applying a coupon.
To trigger order level promotion, make order amount &gt; 200
To trigger product level promotion, use the product under category 'womens-clothing'
To trigger shipping level promotion, make order amount &gt; 100</description>
        <enabled-flag>true</enabled-flag>
        <campaign-scope>
            <applicable-online/>
        </campaign-scope>
        <customer-groups match-mode="any">
            <customer-group group-id="Everyone"/>
        </customer-groups>
    </campaign>

