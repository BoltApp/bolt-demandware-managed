        </campaign-scope>
        <customer-groups match-mode="any">
            <customer-group group-id="Everyone"/>
        </customer-groups>
        <coupons>
            <coupon coupon-id="bolt-order-10amount-off"/>
        </coupons>
    </campaign>

    <campaign campaign-id="bolt-all-promotion-types-coupon">
